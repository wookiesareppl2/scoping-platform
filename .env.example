# Environment Variables for Client Scoping Platform

# GitHub Integration (optional)
VITE_GITHUB_TOKEN=your_github_personal_access_token_here

# Application Configuration
VITE_APP_TITLE=Client Scoping Platform
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_EMAIL=contact@yourcompany.com
VITE_COMPANY_WEBSITE=https://yourcompany.com

# Analytics (optional)
VITE_GA_TRACKING_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your_hotjar_id

# Feature Flags
VITE_ENABLE_GITHUB_INTEGRATION=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EMAIL_NOTIFICATIONS=false

# Development
VITE_DEBUG_MODE=false